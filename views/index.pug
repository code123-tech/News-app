    body
        nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.sticky-top
            a(class="navbar-brand",href="#")
                img(src="../static/logo.png" alt="" srcset="" width="36" height="36" class="d-block" viewbox="0 0 612 612" role="img" focusable="false")
            a(class="navbar-brand" href="#")
                | Inidan Today News
            button(class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
                span(class="navbar-toggler-icon")
            div(class="collapse navbar-collapse" id="navbarSupportedContent")
                ul(class="navbar-nav mr-auto")
                    li(class="nav-item active")
                        a(class="nav-link" href="#newsAccordian")
                           | Home 
                           span(class="sr-only")
                                | (current)
                    li(class="nav-item")
                        a(class="nav-link" href="#contact")
